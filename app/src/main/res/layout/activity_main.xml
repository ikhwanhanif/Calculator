<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<EditText
    android:id="@+id/inputField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="#D3D3D3"
    android:gravity="end"
    android:padding="16dp"
    android:hint="0"
    android:textSize="24sp"
    android:inputType="none"
    android:focusable="false"/>

<GridLayout
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal">


    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="7"
        android:tag="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="8"
        android:tag="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="9"
        android:tag="9" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="/"
        android:tag="/" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="4"
        android:tag="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="5"
        android:tag="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="6"
        android:tag="6" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="*"
        android:tag="*" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="1"
        android:tag="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="2"
        android:tag="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="3"
        android:tag="3" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="-"
        android:tag="-" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="0"
        android:tag="0" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="."
        android:tag="." />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="="
        android:tag="=" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="+"
        android:tag="+" />

    <Button
        android:id="@+id/btnPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="^"
        android:tag="^" />

    <Button
        android:id="@+id/btnModulus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="%"
        android:tag="%" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CalculatorButton"
        android:text="C"
        android:tag="C" />

</GridLayout>

</LinearLayout>
